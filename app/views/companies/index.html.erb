
<h1>Companies</h1>
<%= link_to 'New Company', new_company_path %>
<table class="table">
  <tr>
  	<th ></th>
    <th>Company Name</th>
    
    <th>Type</th>
    <th colspan="3">Actions</th>
  </tr>
 
  <% @companies.each do |company| %>
    <tr>
      <td> <%= image_tag(company.picture.url(:thumb).to_s) if company.picture? %> </td>
      <td><%= company.name %></td>
      <td><%= company.company_type %></td>
      <td><%= link_to 'Show', company_path(company), class: "btn btn-xs btn-warning" %></td>
      <td><%= link_to 'Edit', edit_company_path(company), class: "btn btn-xs btn-warning" %></td>
      <td><%= link_to 'Destroy', company_path(company), class: "btn btn-xs btn-warning", 
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>