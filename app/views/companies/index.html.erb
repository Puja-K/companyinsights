

  <div class="infomation">
    <div class="container">
      <h1>Companies</h1>
      <div class="section-heading" style="padding-bottom:0px;">
       <%= form_tag search_companies_path, method: :get do %>
          <%= text_field_tag :search_company, params[:company], class: "pull-left search-text", placeholder: "Search" , style: {width: "341px", "margin-right": "10px" }%>
      <% end %>
        <span class="pull-right" style="margin-top:-5px;"> <a href="#">
        
        <%= link_to 'Add company', new_company_path, class:" btn btn-green btn-search" %>
        </a> </span>
        <div class="clearfix"></div>
      </div>
      <div class="dashboard-row ads" style="margin:10px 0px;">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th style="text-align: center;">Company Logo</th>
              <th style="text-align: center;">Company Name</th>
              <th style="text-align: center;">type</th>
              <th style="text-align: center;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @companies.each do |company| %>
              <tr>
                <td><div class="companyLogoPic"><%= image_tag(company.picture.url(:thumb).to_s) if company.picture? %> </div></td>
                <td><%= company.name %></td>
                <td><%= company.company_type %></td>
                <td>
                  <%= link_to company_path(company) do %>
                      <%= fa_icon "eye", class: "action-btn" , aria: {hidden: true} %>
                  <% end %>
                  <%= link_to edit_company_path(company) do %>
                      <%= fa_icon "pencil", class: "action-btn" , aria: {hidden: true} %>
                  <% end %>
                  <%= link_to company_path(company), method: :delete, data: { confirm: 'Are you sure?' }  do %>
                      <%= fa_icon "trash-o", class: "action-btn" , aria: {hidden: true} %>
                  <% end %>
                </td>
              </tr>
            <% end %>
            
          </tbody>
        </table>
        <%= will_paginate @companies %>
        <div class="clearfix"></div>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
  <div class="clearfix"></div>
  <div class="push"></div>