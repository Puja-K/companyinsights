<h1 align="center"> Company: <%= @company.name.capitalize %> </h1>
<hr />
<div class="company-actions">
		<%= link_to 'New Position', new_company_position_path(@company), class: "btn btn-xs btn-warning" %>
		<%= link_to "Edit", edit_company_path(@company), class: "btn btn-xs btn-warning"%>
		<%= link_to "Delete", company_path(@company), method: :delete, 
								data: {confirm: "Are you sure you want to delete this company?"}, 
								class: "btn btn-xs btn-danger"%>
		<%= link_to "Return to Companies list", companies_path, class: "btn btn-xs btn-primary	"%>
	</div>
<% @company.positions.each do |p| %>
	<div class="row">
		<div class="well">
			<ul>
				<li> <strong> Title: </strong><%= p.title %></li>
				
				<hr />
				<li><strong> Description: </strong><%= p.description %></li>
				
				<hr />
				<li><strong> Job Expectation: </strong><%= p.job_expectation %></li>
				
				<hr />
				<li><strong> Average years of experience: </strong><%= p.avg_yrs_exp %></li>
				
				<hr />
				<li><strong> Criteria for next level: </strong><%= p.criteria_for_next_level %></li>
				
			</ul>
			<p>
				<div class="company-actions center">
					<%= link_to "Edit this position", edit_company_position_path(@company, p), class: "btn btn-primary btn-xs"%>
				</div>
			</p>
		</div>
		
	</div>

<% end %>
