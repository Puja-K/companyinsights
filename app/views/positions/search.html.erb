                       <div class="Ads_heading">Job profile Level</div>
                       <div class="Ads_Data"><%= @results[0].internal_levels %></div>
                       <div class="clearfix"></div>
                    </div>
                    <div class="ads jobdesc"> 
                    <div class="Ads_heading">Typical Job Desc</div>
                    <div class="Ads_Data"><%= @results[0].description %></div>
                      
                    <div class="clearfix"></div>
                  </div>
                  <div class="clearfix"></div>
                </div>
              </div>
            </div>
            <div class="col-md-6 rightPadding">
            <div class="comingsoon">Coming Soon</div>
              <div class="ads orgChart">
                <div class="tree">
                  <ul>
                    <li> <a href="#">Parent</a>
                      <ul>
                        <li> <a href="#">Child</a>
                          <ul class="grand-child">
                            <li><a href="#">Grand Child</a></li>
                            <li> <a href="#">Grand Child</a> </li>
                            <li><a href="#">Grand Child</a></li>
                            <li><a href="#">Grand Child</a></li>
