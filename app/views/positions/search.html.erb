                        </li>
                      </ul>
                    </li>
                  </ul>
                </div>
                <div class="clearfix"></div>
              </div>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="clearfix"></div>
        </div>
        <% else %>
        <div class="HowItWorks">
          <% if !@company.nil? %>
            <div class="ads">
                <% @PositionPaginator = @company.positions.paginate(:page => params[:page], :per_page => 5) %>
                <% @PositionPaginator.each do |p| %>
                <div class="listing">
                  <h3 class="heading"><%= p.title %></h3>
                  <p class="heading-content"><%= p.description %></p>
                  <div class="clearfix"></div>
                </div>
                <% end %>
                <div class="clearfix"></div>
            </div>
            <%= will_paginate @PositionPaginator %>
          <% end %>
        </div>
        
    <% end %>
