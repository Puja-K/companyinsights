<div class="infomation">
  <div class="fillDetails filldetails1">
  <div class="container">
  <%= form_tag search_positions_path, method: :get do %>
    <div class="form_row">
      <div class="form_element">

          
            <%= text_field_tag :search_company, params[:company], data: { autocomplete_source: companies_path}, class: "text-box text-box2", placeholder: "Company Name" %>
            <%= text_field_tag :search_position, params[:search_position], class: "text-box1 text-box3",
             placeholder: "Position/Title" %>
      <%= submit_tag "Search", name: nil, class: " btn btn-green btn-search"%>
            
          </div>
          <div class="clearfix"></div>
        </div>
        <% end %>
  </div>
  </div>
    <div class="container">
  <div class="company_info">
        <div class="company_logo"><%= image_tag @company.picture.url if @company.picture? %></div>
        <div class="company_name"><%= link_to @company.name%></div>
        <div class="clearfix"></div>
      </div>
      <% if !@results.nil? %>
        <div class="Section1">
          <div class="col-md-12 nopadding">
            <div class="col-md-6 nopadding">
              <div class="jobInfo">
                <div class="googleAdds1">
                  <div class="ads profile_level"> Job profile Level
                  <p>
                    <%= @results[0].internal_levels %>
                    </p>
                    <div class="clearfix"></div>
                  </div>
                  <div class="ads profile_level1"> Business title
                  <p><%= @results[0].title %></p>
                    <div class="clearfix"></div>
                  </div>
                  <div class="ads jobdesc"> Typical Job Desc
                      <p><%= @results[0].description %></p>
                    <div class="clearfix"></div>
                  </div>
                  <div class="clearfix"></div>
                </div>
              </div>
            </div>
            <div class="col-md-6 rightPadding">
              <div class="ads orgChart">
                <div class="tree">
                  <ul>
                    <li> <a href="#">Parent</a>
                      <ul>
                        <li> <a href="#">Child</a>
                          <ul class="grand-child">
                            <li><a href="#">Grand Child</a></li>
                            <li> <a href="#">Grand Child</a> </li>
                            <li><a href="#">Grand Child</a></li>
                            <li><a href="#">Grand Child</a></li>
                          </ul>
                        </li>
                      </ul>
                    </li>
                  </ul>
                </div>
                <div class="clearfix"></div>
              </div>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="clearfix"></div>
        </div>
        <% else %>
        <div class="HowItWorks">
          <div class="ads">
              <% @PositionPaginator = @company.positions.paginate(:page => params[:page], :per_page => 5) %>
              <% @PositionPaginator.each do |p| %>
              <div class="listing">
                <h3 class="heading"><%= p.title %></h3>
                <p class="heading-content"><%= p.description %></p>
                <div class="clearfix"></div>
              </div>
              <% end %>
              <div class="clearfix"></div>
          </div>
        </div>
        
    <% end %>
    <div class="HowItWorks">
        <div class="col-md-12 nopadding">
         <!--  <h2>Similar Position Company Name(option-1)</h2> -->
          <div class="col-sm-3 col-md-3 nopadding">
            <div class="ads ads1">
              
              <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="col-sm-3 col-md-3 nopadding">
            <div class="ads ads1">
              
              <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="col-sm-3 col-md-3 nopadding">
            <div class="ads ads1">
             
              <div class="clearfix"></div>
            </div>
          </div>
          <div class="col-sm-3 col-md-3 nopadding">
            <div class="ads ads1">
              
              <div class="clearfix"></div>
            </div>
          </div>
        </div>
        <div class="clearfix"></div>
      </div>
        <% if @results.nil? %>
          <%= will_paginate @PositionPaginator %>
        <% end %>
        <div class="clearfix"></div>


    </div>
  </div>



