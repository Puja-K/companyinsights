  <div class="container">
  <%= form_tag search_positions_path, method: :get do %>
    <div class="form_row">
      <div class="form_element">

          
            <%= text_field_tag :search_company, params[:search_company], data: { autocomplete_source: companies_path}, required: :true, class: "text-box text-box2", placeholder: "Company Name" %>
              
            <%= text_field_tag :search_position, params[:search_position], class: "text-box1 text-box3",
             placeholder: "Position/Title", data: { autocomplete_source: positions_path}%>
      <%= submit_tag "Search", name: nil, class: " btn btn-green btn-search"%>
            
          </div>
          <div class="clearfix"></div>
        </div>
        <% end %>
        <%= render 'layouts/messages' %>
  </div>
  </div>
    <div class="container">
      <% if !@company.nil? %>
        <div class="company_info">
          <div class="company_logo"><%= image_tag @company.picture.url if @company.picture? %></div>
          <div class="company_name"><%= link_to @company.name%></div>
          <div class="clearfix"></div>
        </div>
      <% end %>
      <% if !@results.nil? && @results.size > 0%>
