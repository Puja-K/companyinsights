<% provide(:title, "Forgot password") %>


<div class="login_form">
<%= render 'layouts/messages' %>
	<h2 class="signin">Enter your email to reset password</h2>
	<div class="login">
	    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
	    <div class="form_row">
	      <%= f.text_field :email , placeholder: "Email" %>
	     </div>
	      <div class="form_row">
	      	<%= f.submit "Submit", class: "btn btn-green loginbtn" %>
	      </div>
	    <% end %>
	</div>
  </div>